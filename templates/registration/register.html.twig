{% extends 'base.html.twig' %}

{% block title %}LstuBooks: Регистрация{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-5">
                {{ form_start(registrationForm) }}

                <div class="form-group mb-2">
                    {{ form_label(registrationForm.name) }}
                    <div class="text-danger m-0">
                        {{ form_errors(registrationForm.name) }}
                    </div>
                    {{ form_widget(registrationForm.name, {'attr':{
                        'class': 'form-control',
                        'aria-describedby': 'nameHelp',
                    }}) }}
                    <small id="nameHelp"
                           class="form-text text-muted mb-0">{{ form_help(registrationForm.name) }}</small>
                </div>

                <div class="form-group mb-2">
                    {{ form_label(registrationForm.email) }}
                    <div class="text-danger m-0">
                        {{ form_errors(registrationForm.email) }}
                    </div>
                    {{ form_widget(registrationForm.email, {'attr':{
                        'class': 'form-control',
                        'aria-describedby': 'emailHelp',
                    }}) }}
                    <small id="emailHelp"
                           class="form-text text-muted mb-0">{{ form_help(registrationForm.email) }}</small>
                </div>

                <div class="form-group mb-2">
                    {{ form_label(registrationForm.password) }}
                    <div class="text-danger m-0">
                        {{ form_errors(registrationForm.password) }}
                    </div>
                    {{ form_widget(registrationForm.password, {'attr':{
                        'class': 'form-control',
                        'aria-describedby': 'passHelp',
                    }}) }}
                    <small id="passHelp"
                           class="form-text text-muted mb-0">{{ form_help(registrationForm.password) }}</small>
                </div>
                <div class="form-check ps-0 mb-2">
                    {{ form_widget(registrationForm.agreeTerms, {'attr':{
                        'class': 'form-check-input',
                        'type' : 'checkbox',
                    }}) }}
                    {{ form_label(registrationForm.agreeTerms) }}
                </div>
                <div class="text-danger m-0">
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>
                <div class="button_container text-center">
                    <button type="submit" class="btn btn-outline-primary mt-3 mx-auto">Войти</button>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
